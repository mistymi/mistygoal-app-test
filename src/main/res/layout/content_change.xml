<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.mistygoals.change"
    tools:showIn="@layout/activity_change">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="16dp">

        <GridLayout
            android:id="@+id/tochange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:orientation="horizontal"
            android:rowCount="6">

            <TextView
                android:text="积分兑换："
                android:textSize="20dp" />

            <Button
                android:id="@+id/movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看一场电影（200分）"
                android:textSize="30dp" />

            <Button
                android:id="@+id/tea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一杯奶茶（100分）"
                android:textSize="30dp" />

            <Button
                android:id="@+id/thing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买一件心仪已久的东西（300分）"
                android:textSize="22dp" />

            <Button
                android:id="@+id/game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打一把游戏（50分）"
                android:textSize="30dp" />

            <Button
                android:id="@+id/rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="休息一晚（250分）"
                android:textSize="30dp" />

            <Button
                android:id="@+id/travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100元旅游基金（500分）"
                android:textSize="30dp" />

            <Button
                android:id="@+id/eat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出去吃顿好的（300分）"
                android:textSize="30dp" />


        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tochange"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余积分："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp" />




        </LinearLayout>
        "

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
